<?xml version="1.0" encoding="UTF-8"?>
<!-- Example update4j manifest (POC)
     - Update the `base` URL to point to the release assets for a given release.
     - In CI you should generate a manifest per release and upload it alongside your artifacts.
-->
<!-- Mettez à jour la version dans l'URL et dans la propriété 'version' -->
<configuration base="https://github.com/aissatahri/registre-comptable/releases/download/v1.3.0/" version="1.3.0">
    <provider>
        <name>GitHub Releases</name>
    </provider>

    <!-- Replace the file path below with the actual jar published in the release -->
    <file path="registre-comptable-1.3.0.jar" download="true"/>

    <!-- Launcher configuration: main class to run after update -->
    <launcher class="com.app.registre.Main">
        <vmArg>-Xmx512m</vmArg>
    </launcher>
</configuration>
