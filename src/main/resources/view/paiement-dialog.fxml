<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<DialogPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.app.registre.controller.PaiementDialogController">

    <header>
        <Text fx:id="dialogTitle" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-fill: #2c3e50;">Nouveau Paiement</Text>
    </header>

    <content>
        <GridPane hgap="15" vgap="15" style="-fx-padding: 20;">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

            <Label text="Année *" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="anneeField" editable="true" promptText="Ex: 2022" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Type *" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
            <ComboBox fx:id="typeField" promptText="INV/EXP" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

            <Label text="Catégorie" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="categorieField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Solde *" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
            <TextField fx:id="montantField" promptText="0.00" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

            <HBox spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="4">
                <Text fx:id="validationText" fill="red" visible="false"/>
            </HBox>
        </GridPane>
    </content>
</DialogPane>
