<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.registre.controller.MenuController" fx:id="rootPane">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #ffffff; -fx-padding: 8 12; -fx-border-color: #ecf0f1; -fx-border-width: 0 0 1 0;">
            <Button text="☰" onAction="#toggleSidebar" styleClass="btn-primary btn-icon"/>
            <Text text="Menu" style="-fx-fill: #7f8c8d; -fx-font-size: 12;"/>
        </HBox>
    </top>

    <left>
        <VBox fx:id="sidebar" prefWidth="250" spacing="10" style="-fx-background-color: #2c3e50;">
            <padding><Insets bottom="20" left="10" right="10" top="20" /></padding>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <ImageView fitHeight="40" fitWidth="40">
                    <Image url="@../images/icon.png" />
                </ImageView>
                <VBox>
                    <Text fill="white" style="-fx-font-weight: bold;" text="Registre" />
                    <Text fill="#ecf0f1" style="-fx-font-size: 10;" text="Comptable" />
                </VBox>
            </HBox>

            <Separator opacity="0.3" />

            <VBox spacing="5" fillWidth="true">
                <Button fx:id="btnRegistre" onAction="#showRegistre" styleClass="menu-button" text="Registre des OP" maxWidth="Infinity" />
                <Button fx:id="btnRecap" onAction="#showRecap" styleClass="menu-button" text="Récapitulatif" maxWidth="Infinity" />
                <Button fx:id="btnMois" onAction="#showMois" styleClass="menu-button" text="Par Mois" maxWidth="Infinity" />
                <Button fx:id="btnInitialSolde" onAction="#showEditInitialSolde" styleClass="menu-button" text="Solde initial" maxWidth="Infinity" />
            </VBox>

            <!-- Réglages group (collapsible) -->
            <Separator opacity="0.0" />
            <TitledPane fx:id="reglagesPane" text="Réglages" expanded="false" collapsible="true" style="-fx-text-fill: #bdc3c7; -fx-padding: 6 0 0 0;">
                <content>
                    <VBox spacing="4">
                        <Button fx:id="btnDesignations" onAction="#showDesignations" styleClass="menu-button submenu-button" text="Designations" maxWidth="Infinity" />
                    </VBox>
                </content>
            </TitledPane>

            <Separator opacity="0.3" />

            <VBox spacing="5">
                <Text fill="#bdc3c7" style="-fx-font-size: 12;" text="Statistiques" />
                <HBox spacing="10">
                    <VBox styleClass="stat-box">
                        <Text fx:id="opsCountMenuText" id="opsCountMenuText" fill="white" style="-fx-font-weight: bold;" text="0" />
                        <Text fill="#bdc3c7" style="-fx-font-size: 10;" text="Opérations" />
                    </VBox>
                    <VBox styleClass="stat-box">
                        <Text fx:id="recettesMenuText" id="recettesMenuText" fill="white" style="-fx-font-weight: bold;" text="0.00" />
                        <Text fill="#bdc3c7" style="-fx-font-size: 10;" text="Recettes" />
                    </VBox>
                    <VBox styleClass="stat-box">
                        <Text fx:id="lastSoldeMenuText" fill="white" style="-fx-font-weight: bold;" text="0.00" />
                        <Text fill="#bdc3c7" style="-fx-font-size: 10;" text="Dernier solde" />
                    </VBox>
                </HBox>
            </VBox>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea">
            <VBox alignment="CENTER" spacing="20">
                <ImageView fitHeight="100" fitWidth="100">
                    <Image url="@../images/icon.png" />
                </ImageView>
                <Text style="-fx-font-size: 24; -fx-fill: #2c3e50;" text="Système de Gestion Comptable" />
                <Text style="-fx-font-size: 14; -fx-fill: #7f8c8d;" text="Bienvenue dans votre registre comptable digital" />
            </VBox>
        </StackPane>
    </center>

</BorderPane>
