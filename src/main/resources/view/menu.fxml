<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.registre.controller.MenuController" fx:id="rootPane">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="top-bar">
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Button fx:id="btnRegistre" onAction="#showRegistre" styleClass="menu-button" text="Registre des OP" />
                <Button fx:id="btnRecap" onAction="#showRecap" styleClass="menu-button" text="Récapitulatif" />
                <Button fx:id="btnMois" onAction="#showMois" styleClass="menu-button" text="Par Mois" />
                <Button fx:id="btnInitialSolde" onAction="#showEditInitialSolde" styleClass="menu-button" text="Solde initial" />
                <Button fx:id="btnDesignations" onAction="#showDesignations" styleClass="menu-button" text="Designations" />
                <Button fx:id="btnUserManagement" onAction="#showUserManagement" styleClass="menu-button" text="Gestion des utilisateurs" />
            </HBox>

            <Region HBox.hgrow="ALWAYS" />

            <HBox alignment="CENTER_RIGHT" spacing="8">
                <Button fx:id="btnChangeDb" onAction="#handleChangeDatabase" styleClass="menu-button" text="Changer de base..." />
                <MenuButton fx:id="userMenu" styleClass="user-name">
                    <graphic>
                        <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                            <Image url="@../images/account.png" />
                        </ImageView>
                    </graphic>
                </MenuButton>
            </HBox>
        </HBox>
    </top>

    <center>
        <StackPane fx:id="contentArea">
            <VBox alignment="CENTER" spacing="20">
                <ImageView fitHeight="100" fitWidth="100">
                    <Image url="@../images/icon.png" />
                </ImageView>
                <Text style="-fx-font-size: 24; -fx-fill: #2c3e50;" text="Système de Gestion Comptable" />
                <Text style="-fx-font-size: 14; -fx-fill: #7f8c8d;" text="Bienvenue dans votre registre comptable digital" />
            </VBox>
        </StackPane>
    </center>

</BorderPane>
