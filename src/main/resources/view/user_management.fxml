<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.Region?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.registre.controller.UserManagementController">
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <HBox spacing="10">
                <Label text="Utilisateurs" style="-fx-font-size:16px; -fx-font-weight:bold;" />
                <Region HBox.hgrow="ALWAYS" />
                <Button text="Ajouter" onAction="#handleAdd" />
                <Button text="Supprimer" onAction="#handleDelete" />
                <Button text="Changer mot de passe" onAction="#handleChangePassword" />
            </HBox>
            <TableView fx:id="usersTable" prefHeight="400">
                <columns>
                    <TableColumn fx:id="colUsername" text="Nom d'utilisateur" prefWidth="200" />
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
