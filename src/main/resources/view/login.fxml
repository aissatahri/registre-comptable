<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.registre.controller.LoginController" spacing="10" alignment="CENTER" stylesheets="/style.css" styleClass="card" prefWidth="420">
    <padding>
        <Insets top="16" right="20" bottom="16" left="20" />
    </padding>
    <Text styleClass="title" text="Connexion" />
    <GridPane hgap="10" vgap="10">
        <Label text="Nom d'utilisateur:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="usernameField" text="admin" promptText="admin" GridPane.rowIndex="0" GridPane.columnIndex="1" onAction="#handleLogin" />

        <Label text="Mot de passe:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <PasswordField fx:id="passwordField" text="admin" promptText="••••••" GridPane.rowIndex="1" GridPane.columnIndex="1" onAction="#handleLogin" />
    </GridPane>
    <Label fx:id="errorLabel" textFill="red" />
    <HBox spacing="10">
        <Button fx:id="btnLogin" text="Se connecter" onAction="#handleLogin" defaultButton="true" styleClass="btn-primary" />
        <Button fx:id="btnCancel" text="Annuler" onAction="#handleCancel" styleClass="btn-warning" />
    </HBox>
</VBox>
